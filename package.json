{
  "name": "api",
  "version": "0.0.1",
  "description": "API and Orchestrator for Dollar GPU Club",
  "main": "index.js",
  "repository": "ssh://git@github.com/dollar-gpu-club/api.git",
  "author": "Colin King <me@colinking.co>",
  "private": true,
  "scripts": {
    "start": "node dist",
    "prestart": "npm run build",
    "lint": "eslint src test; exit 0",
    "lint:fix": "eslint src test --fix; exit 0",
    "build": "rimraf dist && babel src -D --out-dir dist",
    "format:md": "prettier --parser markdown --write '*.md'",
    "format:yml": "prettier --parser yaml --single-quote --write '*.{yml,yaml}'",
    "format:code": "prettier --single-quote --print-width 120 --write 'src/**/*.js' 'test/**/*.js'",
    "start:dev": "nodemon --watch .env --watch src --exec babel-node src --source-maps"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true,
      "mocha": true
    },
    "extends": [
      "prettier",
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
    },
    "plugins": [
      "prettier"
    ],
    "rules": {
      "no-console": [
        "error",
        {
          "allow": [
            "error"
          ]
        }
      ],
      "no-debugger": [
        "error"
      ]
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/node": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/register": "^7.0.0",
    "chai": "^4.2.0",
    "codecov": "^3.1.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.6.1",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-prettier": "^2.7.0",
    "husky": "^1.0.1",
    "lint-staged": "^7.3.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.4",
    "nyc": "^13.0.1",
    "prettier": "^1.14.3",
    "rimraf": "^2.6.1",
    "supertest": "^3.3.0"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.16.3",
    "express-promise-router": "^3.0.3",
    "morgan": "^1.9.1"
  }
}
